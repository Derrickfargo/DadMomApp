<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bakground" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54.0dip"
        android:background="@drawable/header"
        >

<!--         <ImageView -->
<!--             android:id="@+id/logOut" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="35.0dip" -->
<!--             android:layout_marginTop="10.0dip" -->
<!--             android:layout_weight="3.0" -->
<!--             android:src="@drawable/logout" /> -->

        <TextView
            android:id="@+id/Text"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
           
            android:gravity="center_vertical|center"
            android:text="I\&apos;m between!"
            android:textColor="@color/black"
            android:textSize="20.0dip" />

<!--         <ImageView -->
<!--             android:id="@+id/editProfile" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="35.0dip" -->
<!--             android:layout_marginTop="10.0dip" -->
<!--             android:layout_weight="3.0" -->
<!--             android:src="@drawable/edit_profile" /> -->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="300.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="5.0dip"
        android:background="@drawable/shapes"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/login_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/background_textbox"
                android:ems="10"
                android:hint="user_name"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:singleLine="true"
                android:textColor="#ffffffff" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6.0dip"
                android:layout_marginTop="6.0dip"
                android:background="@drawable/background_textbox"
                android:ems="10"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:singleLine="true"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bntton_login_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2.0dip"
                android:layout_marginTop="12.0dip"
                android:background="@drawable/backgrund_button_red"
                android:text="Login" />

            <Button
                android:id="@+id/bntton_login_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/background_button_blue"
                android:text="Sign Up" />

            <CheckBox
  android:layout_gravity="center_horizontal"
                android:id="@+id/check_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_forgetpasssword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/linearLayout1"
        android:layout_marginTop="18.0dip"
        android:clickable="false"
        android:padding="5.0dip"
        android:gravity="center_horizontal"
        android:text="Forgot password"
        android:textColor="#000000" />

</RelativeLayout>