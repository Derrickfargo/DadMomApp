<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bakground" >


    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50.0dip"
        android:text="Report Type"
        android:textColor="#ffffffff"
        android:textSize="15.0sp" />

    <Spinner
        android:id="@+id/reportType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75.0dip" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175.0dip"
        android:text="Select Year"
        android:textColor="#ffffffff"
        android:textSize="15.0sp" />

    <Spinner
        android:id="@+id/selectYear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200.0dip" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300.0dip"
        android:text="Select Month"
        android:textColor="#ffffffff"
        android:textSize="15.0sp" />

    <Spinner
        android:id="@+id/selectMonth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="325.0dip" />

    <Button
        android:id="@+id/bntton_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="425.0dip"
        android:background="@drawable/backgrund_button_red"
        android:text="ViewGraph" />

    <Button
        android:id="@+id/bntton_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="475.0dip"
        android:background="@drawable/backgrund_button_red"
        android:text="ViewGraphData" />

</RelativeLayout>