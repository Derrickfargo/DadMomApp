<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bakground" >
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54.0dip"
        android:background="@drawable/header"
        android:weightSum="9.0" >

        <ImageView
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_weight="3.0"
            android:src="@drawable/logout" />

        <TextView
            android:id="@+id/Text"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_weight="3.0"
            android:gravity="center_vertical"
            android:text="I\&apos;m between!"
            android:textColor="@color/black"
            android:textSize="20.0dip" />

        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_weight="3.0"
            android:src="@drawable/edit_profile" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="300.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="5.0dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/residentialCamera"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="20.0dip" />
    </LinearLayout>

    <Button
        android:id="@+id/detail"
        android:layout_width="75.0dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/save"
        android:layout_alignBottom="@id/save"
        android:layout_toLeftOf="@id/save"
        android:background="@drawable/backgrund_button_red"
        android:text="Details" />

    <Button
        android:id="@+id/save"
        android:layout_width="75.0dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/cancel"
        android:layout_alignBottom="@id/cancel"
        android:layout_toLeftOf="@id/cancel"
        android:background="@drawable/backgrund_button_red"
        android:text="save" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/linearLayout1"
        android:layout_below="@id/linearLayout1"
        android:background="@drawable/backgrund_button_red"
        android:paddingRight="20.0dip"
        android:text="cancel" />

</RelativeLayout>